<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/returnbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/teal_200"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:text="return to map"/>


            <TextView
                android:id="@+id/bkname"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textColor="@color/teal_200"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/btotal"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:textColor="#D3D3D3"
                android:textSize="22dp"
                />


            <TextView
                android:id="@+id/bavail"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="55dp"

                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="22dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"
                android:layout_marginTop="90dp"/>

            <TextView
                android:id="@+id/bkaddress"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                />

            <RadioGroup
                android:id="@+id/rate_Vehicle"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="200dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rate_Car"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_marginRight="20dp"
                    android:text="Rate"
                    android:button="@drawable/ic_car_icon"

                    />

                <RadioButton
                    android:id="@+id/rate_Motorbike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_marginRight="20dp"
                    android:text="Rate"
                    android:button="@drawable/ic_motorcycle_icon"
                    />

                <RadioButton
                    android:id="@+id/rate_Lorry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:textSize="15dp"
                    android:text="Rate"
                    android:button="@drawable/ic_lorry_icon"
                    />

            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"
                android:layout_marginTop="290dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Select Vehicle"
                android:layout_marginLeft="20dp"
                android:textSize="18dp"
                android:layout_marginTop="320dp"/>

            <Spinner
                android:id="@+id/spinner_Vehicle"
                android:layout_width="200dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_height="50dp"
                android:layout_marginTop="310dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Select Payment"
                android:layout_marginLeft="20dp"
                android:textSize="18dp"
                android:layout_marginTop="380dp"/>

            <Spinner
                android:id="@+id/spinner_Payment"
                android:layout_width="200dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_height="50dp"
                android:layout_marginTop="370dp"
                />



            <Button
                android:id="@+id/btn_Book"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="430dp"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="20dp"
                android:text="BOOK"
                android:backgroundTint="@color/teal_200"
                android:textColor="@color/black"
                />

        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>